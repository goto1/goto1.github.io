<!DOCTYPE html>
<html lang="en">
	<head>
		{% include "head.njk" %}
		{% if styles %}
			{% if site.env %}
				<!-- capture the CSS content as a Liquid variable -->
				{% set css %}{% include styles %}{% endset %}
				<style type="text/css">
					{{css | safe}}
				</style>
			{% else %}
				<link rel="stylesheet" href="/static/{{styles}}">
			{% endif %}
		{% endif %}
	</head>
	<body>
		{{ content | safe }}

		{% if js %}
			{% if site.env %}
				<script src="static/{{js}}"></script>
			{% else %}
				<script src="/static/{{js}}"></script>
			{% endif %}
		{% endif %}
	</body>
</html>